# VitalSigns Backend Configuration

# Application
APP_NAME=VitalSigns
APP_VERSION=0.1.0
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1

# CORS - Comma-separated list of origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/vitalsigns
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# Data Source API Keys (optional)
WEATHER_API_KEY=
WHO_API_KEY=

# Risk Calculation
DEFAULT_RISK_THRESHOLD=0.7
ALERT_THRESHOLD=0.8

# Refresh Intervals (seconds)
DATA_REFRESH_INTERVAL=3600
RISK_CALCULATION_INTERVAL=1800
